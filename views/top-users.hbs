{{> restaurant-tabs route='topUsers'}}
<h1>美食達人</h1>
<hr />
<div class="row" style="text-align: center;">
  {{#each users}}
  <div class="col-3 mb-4">
    <a href="/users/{{this.id}}">
      {{#if this.image}}
      <img src="{{this.image}}" width="140px" height="140px" style="transition: opacity 0.5s; opacity:0;"
        onload="this.style.opacity=1;" />
      {{else}}
      <img src="https://via.placeholder.com/140" width="140px" height="140px" />
      {{/if}}
    </a>
    <h2>{{this.name}}</h2>
    <span class="bg-secondary badge">追蹤人數：{{this.followerCount}}</span>
    <div>
      {{#ifCond this.id ../loginUserId}}
      <button class="btn btn-secondary disabled mt-2">It's You</button>
      {{else}}
      {{#if this.isFollowed }}
      <form action="/following/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
        <button type="submit" class="btn btn-warning mt-2">Followed</button>
      </form>
      {{else}}
      <form action="/following/{{this.id}}" method="POST" style="display: contents;">
        <button type="submit" class="btn btn-outline-warning mt-2">Follow</button>
      </form>
      {{/if}}
      {{/ifCond}}
    </div>
  </div>
  {{/each}}
</div>
